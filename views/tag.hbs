<!DOCTYPE html>
<html>
    <head>
        <title>Writer's Kiln | Tag</title>
        <meta name="author" content="CHUA, John Vincent C. & USON, Josh Aaron Khyle S.">

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        <link rel="stylesheet" href="/css/tag.css">

        <script type="text/javascript" src="/js/tag.js"></script>
        <script type="text/javascript" src="/js/status.js"></script>
    </head>

    <body>
        {{#if username}}
            {{> navbaruser}}
        {{else}}
            {{> navbarvisitor}}
        {{/if}}

        <!--Container-->
        <div class="container-xl px-5 shadow-lg bg-body rounded" style=" background-color: white;padding-top: 100px;">
            <div class="mt-0 mb-4 pt-5 pb-5 header d-flex align-items-center justify-content-center">
                <h1 class="text-center">WRITER'S KILN</h1>
            </div>
            <div class="row">
                <!--Column 1-->
                <div class="col-9 border-right">
                    <div class="d-flex border-bottom align-items-center justify-content-between mb-3" id="tag-001">
                        <h1 class="m-0 d-inline" id="tag-label">Poem</h1>
                        <button type="button" class="btn btn-outline-warning rounded-pill follow m-2" onclick="updateFollow('tag-001')"> <span><strong>Follow</strong></span> </button>
                    </div>

                    <ul class="nav nav-pills" role="tablist">

                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#hot">Hot</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#new">New</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div id="hot" class="container tab-pane active"><br>
                            <h3>Hot Posts</h3>

                            {{#each hot_posts}}
                                {{#if general}}
                                    {{> feedgeneral}}
                                {{else if plot}}
                                    {{> feedstory}}
                                {{else if characters}}
                                    {{> feedstory}}
                                {{else if setting}}
                                    {{> feedstory}}
                                {{else if media}}
                                    {{> feedmedia}}
                                {{/if}}
                            {{/each}}

                            <ul class="pagination justify-content-center">
                                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                                <li class="page-item active"><a class="page-link" id="page-link-no" href="#">1</a></li>
                                <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
                            </ul>
                        </div>

                        <div id="new" class="container tab-pane fade"><br>
                            <h3>New Posts</h3>

                            {{#each new_posts}}
                                {{#if general}}
                                    {{> feedgeneral}}
                                {{else if plot}}
                                    {{> feedstory}}
                                {{else if characters}}
                                    {{> feedstory}}
                                {{else if setting}}
                                    {{> feedstory}}
                                {{else if media}}
                                    {{> feedmedia}}
                                {{/if}}
                            {{/each}}

                            <ul class="pagination justify-content-center">
                                <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                                <li class="page-item active"><a class="page-link" id="page-link-no" href="#">1</a></li>
                                <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-3 pr-0">
                    <!-- Tags -->
                    <div class="pt-3 pb-3 align-content-center border">
                        <span class="d-block text-center bg-light"><i class="fa fa-line-chart"></i><h6 class="d-inline ml-2">Trending Tags</h6></span>
                        <div class="p-2">
                            {{#each trending_tags}}
                                <a href="/tag/{{tag}}" class="badge badge-warning badge-pill"> {{tag}} </a>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            updateClickables();
        </script>
    </body>
</html>

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <title>Writer's Kiln | Create Post</title>
    <meta name="author" content="CHUA, John Vincent C. & USON, Josh Aaron Khyle S.">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/css/create-post.css">

    <script type="text/javascript" src="/js/status.js"></script>
    <script type="text/javascript" src="/js/create-post.js"></script>
</head>
<body>
    {{#if username}}
        {{> navbaruser}}
    {{else}}
        {{> navbarvisitor}}
    {{/if}}

    <!--Main container-->
    <div class="container-xl pt-5 mt-5 shadow-lg mb-5 bg-body">
        <h2 class="mb-4 border-bottom pb-3 mt-3 pr-4 pl-5"> <a href="../feed"><i class="fa fa-arrow-left" aria-hidden="true"></i></a> Create Post</h2>
        <form class="d-flex h-100 flex-column ml-5 mt-3 pl-3 mx-auto w-75" onsubmit="return checkSubmit()" action="/create-post" method="post" enctype="multipart/form-data">
            <!--Literary Title-->
            <div class="form-group">
                <label for="title"><h5>Title</h5></label>
                <input type="text" class="form-control" placeholder="Enter Post Title" id="title" name="title" value="">
            </div>

            <!--Button for followed tags Modal-->
            <div class="form-group">
                <label for="tags"><h5>Select Tags</h5></label>
                <input type="text" class="form-control" placeholder='Separate tags with spaces - (i.e. "Horror Action Adventure Post-Apocalyptic")' id="tags" name="tags" value="">
            </div>

            <!--Content-->
            <label class="mb-0" for="s-desc"><h5>Content</h5></label>
            <ul class="nav nav-tabs border-bottom-0 mb-2" id="contentTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="general-tab" data-toggle="tab" onclick="clicked('general')" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="story-tab" data-toggle="tab" onclick="clicked('story')" href="#story" role="tab" aria-controls="story" aria-selected="false">Story</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="media-tab" data-toggle="tab" onclick="clicked('media')" href="#media" role="tab" aria-controls="media" aria-selected="false">Media</a>
                </li>
            </ul>

            <!--Content Indiv-->
            <div class="tab-content" id="tablistContent">
                <!--General-->
                <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
                    <div class="form-group">
                        <textarea class="form-control" id="genContent" name="genContent" rows="9" placeholder="Enter content here"></textarea>
                    </div>
                </div>

                <!--Story-->
                <div class="tab-pane fade" id="story" role="tabpanel" aria-labelledby="story-tab">
                    <div class="tab-pane fade show active" id="plot" role="tabpanel" aria-labelledby="general-tab">
                        <div class="form-group">
                            <h5>Plot</h5>
                            <textarea class="form-control" id="plotContent" name="plotContent" rows="9" placeholder="Enter story here"></textarea>
                        </div>
                        <div class="d-flex flex-row">
                            <div class="form-group w-50">
                                <h5>Characters</h5>
                                <textarea class="form-control mr-3" id="charContent" name="charContent" rows="9" placeholder="Enter characters here"></textarea>
                            </div>
                            <div class="form-group w-50">
                                <h5 class="ml-3">Setting</h5>
                                <textarea class="form-control ml-3" id="settingContent" name="settingContent" rows="9" placeholder="Enter setting here"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <!--Media-->
                <div class="tab-pane fade mt-1" id="media" role="tabpanel" aria-labelledby="media-tab">
                    <!--Thumbnail-->
                    <div class="form-group">
                        <input type="file" class="form-control-file mb-3" id="media" name ="media" accept="image/*">
                        <!-- <img src="/images/blank.jpg" class="img-thumbnail mb-2 mt-0" alt="thumbnail"> -->
                    </div>
                </div>
            </div>
            <em><p id="error" class="text-danger"></p></em>
                <!--Update Confirm-->
                <div class="d-flex flex-row-reverse mt-3">
                    <button type="submit" class="btn btn-warning mb-4 mt-2 w-25"><strong>Create Post</strong></button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>

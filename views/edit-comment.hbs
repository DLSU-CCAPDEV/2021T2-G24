<!DOCTYPE html>
<html>
    <head>
        <title>Writer's Kiln | Edit Comment</title>

        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

        <link rel="stylesheet" href="/css/comment.css">

        <script type="text/javascript" src="/js/comment.js"></script>

    </head>
    <body>
        {{#if username}}
            {{> navbaruser}}
        {{else}}
            {{> navbarvisitor}}
        {{/if}}

        <div class="container-xl pt-5 mt-5 shadow-lg mb-5 bg-body">
            <h2 class="mb-4 border-bottom pb-3 mt-3 pr-4 pl-5">Edit Comment</h2>
            <form class="d-flex h-100 flex-column ml-5 mt-3 pl-3 mx-auto w-75" onsubmit="return checkSubmit()" action="/edit-comment/{{comment._id}}" method="post">
                <!--Literary Title-->
                <div class="form-group">
                    <label for="comment"><h5>Replying to {{post.username}}'s Post</h5></label>
                    <textarea class="form-control" id="comment" name="comment" rows="9" placeholder="Enter comment here">{{comment.content}}</textarea>
                    <em><p id="error" class="text-danger"></p></em>
                    <div class="d-flex flex-row-reverse mt-3">
                        <button type="submit" class="btn btn-warning mb-0 mt-2 w-25"><strong>Update Comment</strong></button>
                    </div>
                </div>
            </form>

            <form class="d-flex h-100 flex-row-reverse mx-auto w-75" action="../delete-comment/{{comment._id}}" method="get">
                <!--Delete Post-->
                <button class="btn btn-danger mb-4 mt-0 w-25" type="button" name="button" name="deletePost" data-toggle="modal" data-target="#delModal"><strong>Remove Comment</strong></button>
                <!--Modal-->
                <div class="modal fade" id="delModal" tabindex="-1">
                    <div class="modal-dialog modal modal-dialog-centered modal-dialog-scrollable">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="tagsModalLabel">Delete Comment</h5>
                            </div>
                            <div class="modal-body">
                                <p>This comment will be removed permanently. Are you sure you want to remove this comment?</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">Confirm</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>


    </body>
</html>

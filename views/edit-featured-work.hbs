<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <title>Writer's Kiln | Create Featured Work</title>
    <meta name="author" content="CHUA, John Vincent C. & USON, Josh Aaron Khyle S.">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/css/create-featured-work.css">
    <script src="/js/validator.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="/js/create-featured-work.js"></script>
</head>
<body>

    {{#if username}}
        {{> navbaruser}}
    {{else}}
        {{> navbarvisitor}}
    {{/if}}

    <!--Main container-->
    <div class="container-xl pt-5 mt-5 shadow-lg mb-5 bg-body rounded">
        <h2 class="mb-4 border-bottom pb-3 mt-3 pr-4 pl-5"> <a href="../settings"><i class="fa fa-arrow-left" aria-hidden="true"></i></a> Edit Featured Work</h2>
        <form class="d-flex h-100 flex-column ml-5 mt-3 pl-3" onsubmit="return checkSubmit()" action="/edit-featured-work/{{featured_work.title}}" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-6 border-right">
                    <!--Literary Title-->
                    <div class="form-group">
                        <label for="title"><h5 class="d-inline">Title - </h5><h6 id="old-title" class="d-inline"><em>{{featured_work.title}}</em></h6></label>
                        <input type="text" class="form-control" placeholder="Enter Literature Title" id="title" name="title" value="{{featured_work.title}}">
                    </div>
                    <!--Synopsis-->
                    <div class="form-group">
                        <label for="s-desc"><h5>Synopsis</h5></label>
                        <textarea class="form-control" id="synopsis" name="synopsis" rows="3" placeholder="Enter Short Description">{{featured_work.synopsis}}</textarea>
                    </div>
                    <!--Link-->
                    <div class="form-group">
                        <label for="username"><h5>External Link</h5></label>
                        <input type="url" class="form-control" placeholder="Enter External Link" id="link" name="link" value="{{featured_work.url}}">
                    </div>
                </div>
                <div class="col-6">
                    <!--Thumbnail-->
                    <div class="form-group">
                        <label for="featured-work" class="mb-1"><h5>Thumbnail</h5></label>
                        <input type="file" class="form-control-file" id="featured-work" name="featured-work" accept="image/*" value="{{featured_work.image}}">
                    </div>
                    <!-- <img src="{{featured_work.image}}" class="img-thumbnail mb-4 mt-0" alt="thumbnail"> -->
                </div>
            </div>
            <em><p id="error" class="text-danger">{{error}}</p></em>
            <!--Update Confirm-->
            <div class="d-flex flex-row">
                <button id="submit" name="submit" type="submit" class="btn btn-warning mb-4 mt-2 w-25">Update Work</button>
            </div>
        </form>
    </div>
</div>
</body>
</html>
